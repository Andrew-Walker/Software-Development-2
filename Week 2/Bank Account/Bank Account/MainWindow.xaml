<Window x:Class="Bank_Account.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Amount £&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="32" Width="81"/>
        <TextBox x:Name="amountTextBox" HorizontalAlignment="Left" Height="23" Margin="10,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" Tag=""/>
        <Button x:Name="creditButton" Content="Credit" HorizontalAlignment="Left" Margin="142,42,0,0" VerticalAlignment="Top" Width="75" Click="Credit_Button_Click" Height="23"/>
        <Button x:Name="debitButton" Content="Debit" HorizontalAlignment="Left" Margin="231,42,0,0" VerticalAlignment="Top" Width="75" Click="Debit_Button_Click"/>
        <Label x:Name="balanceLabel" Content="Your current bank balance is £0" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="32" Width="227"/>
        <ListBox x:Name="transactionListBox" HorizontalAlignment="Left" Height="304" Margin="318,10,0,0" VerticalAlignment="Top" Width="189"/>

    </Grid>
</Window>
